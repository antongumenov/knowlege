{
    // включаю сниппеты
    "editor.tabCompletion": "onlySnippets",
    "better-comments.tags": [
        {
            "tag": "_",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "~",
            "color": "#bd45d2",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "!",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "editor.minimap.enabled": false,
    "go.toolsManagement.autoUpdate": true,
    "editor.fontSize": 13,
    "window.zoomLevel": 1.1,
    "terminal.integrated.mouseWheelZoom": true,
    "terminal.integrated.fontSize": 12,
    "liveServer.settings.donotShowInfoMsg": true,
    "editor.formatOnSave": true,
    "html.format.contentUnformatted": "",
    "git.openRepositoryInParentFolders": "never",
    // убираю две папки в одной строке
    "explorer.compactFolders": false,
    // убираю быстрые подсказки, чтобы нормально пользоваться сниппетами
    "editor.quickSuggestions": {
        "other": "off",
        "comments": "off",
        "strings": "off"
    },
    // убераю подсветку символов UNICODE
    "editor.unicodeHighlight.ambiguousCharacters": false
}